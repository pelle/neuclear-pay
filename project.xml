        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
        </unitTest>

        <!-- J A R  R E S O U R C E S -->

    </build>
